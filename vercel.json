{
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/service-worker.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/wellness",
      "destination": "/services",
      "permanent": true
    },
    {
      "source": "/biologics",
      "destination": "/services", 
      "permanent": true
    },
    {
      "source": "/knowledge-center",
      "destination": "/resources",
      "permanent": true
    },
    {
      "source": "/blog",
      "destination": "/resources",
      "permanent": true
    }
  ]
}